    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            // server -> local
            "pathMappings": {
                "/var/app/src": "${workspaceFolder}/src",
                "/var/app/test": "${workspaceFolder}/test",
                "/var/app/vendor": "${workspaceFolder}/vendor"
            }
        },
    ]
}
